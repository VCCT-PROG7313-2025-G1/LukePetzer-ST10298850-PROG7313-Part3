<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login"
        app:launchSingleTop="true">
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register">
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_stats"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.StatsFragment"
        android:label="Stats"
        tools:layout="@layout/fragment_stats" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.AddTransactionFragment"
        android:label="Add"
        tools:layout="@layout/fragment_add_transaction">
        <action
            android:id="@+id/action_addTransactionFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_addTransactionFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/navigation_add"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/navigation_budget"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.BudgetFragment"
        android:label="Budget"
        tools:layout="@layout/fragment_budget" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_settingsFragment_to_transactionCategoriesFragment"
            app:destination="@id/transactionCategoriesFragment" />
    </fragment>

    <fragment
        android:id="@+id/transactionCategoriesFragment"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.TransactionCategoriesFragment"
        android:label="Transaction Categories"
        tools:layout="@layout/fragment_transaction_categories">
        <action
            android:id="@+id/action_transactionCategoriesFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.lukepetzer_st10298850_prog7313_part3.fragments.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />

    <!-- Global action to navigate to the profile fragment from anywhere -->
    <action
        android:id="@+id/action_global_profileFragment"
        app:destination="@id/profileFragment" />

    <!-- Global action to navigate to the login fragment from anywhere -->
    <action
        android:id="@+id/action_global_to_login"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/loginFragment"
        app:popUpToInclusive="true" />

</navigation>